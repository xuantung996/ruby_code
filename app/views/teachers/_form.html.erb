<%= form_with(model: teacher, local: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :nam %>
    <%= form.radio_button :sex, 1 %>
  </div>

  <div class="field">
    <%= form.label :nu %>
    <%= form.radio_button :sex, 0 %>
  </div>

  <div class="field">
    <%= form.label :birthday %>
    <%= form.date_select :birthday %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.number_field :phone %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <%= form.label :experence %>
  <%= form.text_field :experence %>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
